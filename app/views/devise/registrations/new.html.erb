<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3"><br/><br/>
      <h2 class="text-center">Sign up</h2><br/>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "first name", class: "form-control input-block" %>
        </div>
       <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input-block" %>
      </div>
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control input-block" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-block" %>
        </div>

        <%= f.fields_for :address do |address| %>
         <%= render 'address_fields', f: address %> 
        <% end %>

        <div class="field">
          <strong>Uplaod a Profile Pic:</strong>
          <%= f.file_field :avatar %>
        </div>

        <br/>
        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-lg btn-outline-dark btn-block" %>
        </div>
      <% end %>
      <br>
    </div>
  </div>
</div>
